<html>
	<head>
		<link rel="stylesheet" type="text/css" href="/styles.css">
		<title><%= title %></title>
	</head>
	<body>
		<%- include('navbar', { categories: categories }) %>
		
		<div class="main">
			<h1><%= title %></h1>

			<form action="/new" method="POST">
				<label for="enterName">Name: </label>
				<input type="text" name="enterName" id="enterName" required /> </br>

				<label for="enterClass">Class: </label>
				<select name="enterClass" id="enterClass">
					<option value="" disabled selected>class</option>
					<% allClasses.forEach(e => { %>
						<option value="<%= e.name %>"><%= e.name %></option>
					<% }) %>
				</select> </br>

				<label for="enterColor">Color: </label>
				<select name="enterColor" id="enterColor">
					<option value="" disabled selected>color</option>
					<% allColors.forEach(e => { %>
						<option value="<%= e.name %>"><%= e.name %></option>
					<% }) %>
				</select> </br>

				<label for="enterSize">Size: </label>
				<select name="enterSize" id="enterSize">
					<option value="" disabled selected>size</option>
					<% allSizes.forEach(e => { %>
						<option value="<%= e.name %>"><%= e.name %></option>
					<% }) %>
				</select> </br>

				<label for="enterQuantity">Quantity: </label>
				<input type="number" name="enterQuantity" placeholder="quantity" required /> </br>

				<button type="submit">Submit</button>
			</form>

			<a href="/">Cancel</a>
		</div>
	</body>
</html>
